@{
ViewData["Title"] = "Your Basket";
}

<div class="basket-container">
    <h1>Your Basket</h1>

    <div class="basket-content">
        <div class="basket-product-list">
            @for (int i = 0; i < 6; i++)
            {
            <div class="basket-product-item">
                <img src="https://cdn.pixabay.com/photo/2024/05/30/06/56/bathroom-8797916_1280.jpg" alt="Product Image" class="basket-product-image">
                <div class="basket-product-details">
                    <h3>Product Name</h3>
                    <p>Short Description for Product</p>
                </div>
                <div class="basket-product-quantity">1</div>
                <div class="basket-product-price">£10.00</div>
            </div>
            }
        </div>

        <div class="basket-order-summary">
            <div class="basket-total">
                <span>Total:</span>
                <span>£72.00</span>
            </div>
            <a asp-controller="Checkout" asp-action="Index" class="basket-checkout-button">Checkout</a>
        </div>
    </div>
</div>